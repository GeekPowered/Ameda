{
  "sections": {
    "main": {
      "type": "main-product",
      "blocks": {
        "vendor-sku": {
          "type": "vendor-sku",
          "settings": {
            "show_vendor": false,
            "show_sku": true,
            "show_barcode": false
          }
        },
        "product-labels": {
          "type": "product-labels",
          "settings": {
          }
        },
        "title": {
          "type": "title",
          "settings": {
            "show_weight": false
          }
        },
        "price": {
          "type": "price",
          "settings": {
            "show_tax_and_shipping": true
          }
        },
        "divider-0": {
          "type": "divider",
          "settings": {
            "show_line": true,
            "spacing": "mt-8 mb-8"
          }
        },
        "variant-picker": {
          "type": "variant-picker",
          "settings": {
            "selector_style": "buttons",
            "enable_dynamic_availability": true,
            "show_backorder_text": true,
            "enable_size_chart": false,
            "size_chart_variant": "Size",
            "size_chart_page": ""
          }
        },
        "divider-1": {
          "type": "divider",
          "disabled": true,
          "settings": {
            "show_line": true,
            "spacing": "mt-8 mb-8"
          }
        },
        "buy-buttons": {
          "type": "buy-buttons",
          "settings": {
            "show_qty_selector": true,
            "enable_dynamic_checkout": true,
            "show_pickup_availability": true,
            "show_gift_card_recipient": false
          }
        },
        "message-2": {
          "type": "message",
          "disabled": true,
          "settings": {
            "icon": "price_tag",
            "title": "<p><strong>Selling fast!<br\/><\/strong>Grab yours while you can<\/p>",
            "close": "once",
            "show_over_media": true,
            "visibility_duration": 5,
            "bg_color": "#e4edfa",
            "text_color": "#1a66d2"
          }
        },
        "collapsible-content-1": {
          "type": "collapsible-content",
          "settings": {
            "heading": "Key Features",
            "icon": "none",
            "text": "{{ product.metafields.product.key_features | metafield_tag }}",
            "page": "",
            "open": false
          }
        },
        "collapsible-content-2": {
          "type": "collapsible-content",
          "settings": {
            "heading": "Delivery and Shipping",
            "icon": "truck",
            "text": "<p>Add some general information about your delivery and shipping policies.<\/p>",
            "page": "",
            "open": false
          }
        },
        "share": {
          "type": "share",
          "settings": {
          }
        },
        "message-3": {
          "type": "message",
          "settings": {
            "icon": "none",
            "title": "<p>Add a stand out message for your customers<\/p>",
            "close": "once",
            "show_over_media": false,
            "visibility_duration": 7,
            "bg_color": "#e4edfa",
            "text_color": "#1a66d2"
          }
        }
      },
      "block_order": [
        "vendor-sku",
        "product-labels",
        "title",
        "price",
        "divider-0",
        "variant-picker",
        "divider-1",
        "buy-buttons",
        "message-2",
        "collapsible-content-1",
        "collapsible-content-2",
        "share",
        "message-3"
      ],
      "settings": {
        "stick_on_scroll": true,
        "sticky_atc_panel": true,
        "sticky_atc_position": "end",
        "sticky_atc_mobile": true,
        "media_layout": "slider",
        "media_size": "default",
        "media_ratio": "1",
        "media_crop": "none",
        "hover_zoom": "large",
        "enable_video_looping": false,
        "stacked_scroll": "always",
        "underline_active": true,
        "media_thumbs": "desktop",
        "thumb_ratio": "1",
        "thumb_crop": "none",
        "media_arrows": "desktop",
        "show_slide_count": true,
        "border_color": "#eeeeee",
        "bg_color": "#f4f4f4",
        "enable_media_grouping": false,
        "media_grouping_option": "Color,Colour,Couleur,Farbe"
      }
    },
    "details": {
      "type": "product-details",
      "blocks": {
        "highlight-text": {
          "type": "highlight-text",
          "settings": {
            "title": "Highlight title",
            "text": "<p>Text to highlight a key feature of your product<\/p>"
          }
        },
        "tabs": {
          "type": "tabs",
          "settings": {
            "style": "collapsible",
            "open_first": false,
            "show_description": true,
            "show_reviews": false,
            "custom_reviews": "",
            "show_specification": false,
            "spec_metafields": "",
            "spec_right_align": false,
            "spec_show_empty_metafields": true,
            "spec_empty_field_text": "-",
            "tab_1_title": "",
            "tab_1_text": "",
            "tab_1_page": "",
            "tab_2_title": "",
            "tab_2_text": "",
            "tab_2_page": "",
            "tab_3_title": "",
            "tab_3_text": "",
            "tab_3_page": ""
          }
        },
        "payment-methods": {
          "type": "payment-methods",
          "settings": {
            "title": "Payment & Security",
            "title1": "Payment methods",
            "show_payment_icons": true,
            "text1": "<p>Your payment information is processed securely. We do not store credit card details nor have access to your credit card information.<\/p>",
            "title2": "",
            "text2": ""
          }
        }
      },
      "block_order": [
        "highlight-text",
        "tabs",
        "payment-methods"
      ],
      "settings": {
      }
    },
    "image-banner": {
      "type": "image-banner",
      "blocks": {
        "image-banner-heading": {
          "type": "heading",
          "settings": {
            "heading": "Image banner",
            "heading_size": "h1",
            "heading_h1": false
          }
        },
        "image-banner-text": {
          "type": "text",
          "settings": {
            "text": "<p>Share information about your brand with your customers. Describe a product, make announcements, or welcome customers to your store.<\/p>",
            "enlarge_text": true
          }
        },
        "image-banner-button": {
          "type": "button",
          "settings": {
            "button_1_label": "Optional button",
            "button_1_link": "",
            "button_1_style": "btn btn--primary",
            "button_2_label": "Optional button",
            "button_2_link": "",
            "button_2_style": "btn btn--primary"
          }
        }
      },
      "block_order": [
        "image-banner-heading",
        "image-banner-text",
        "image-banner-button"
      ],
      "settings": {
        "url": "",
        "height_mode": "fixed",
        "fixed_height_desktop": 640,
        "fixed_height_mobile": 480,
        "overlay_position": "justify-center items-center",
        "overlay_text_align": "text-center",
        "mob_center_text": false,
        "mobile_stacked": false,
        "color_scheme": "white",
        "full_width": false,
        "transparent_content_color": "#ffffff",
        "tint_color": "#000000",
        "tint_opacity": 40,
        "prevent_animation": false
      }
    },
    "recommendations": {
      "type": "product-recommendations",
      "settings": {
        "heading": "You may also like",
        "heading_align": "text-start",
        "layout": "carousel",
        "card_size_mobile": "small",
        "card_size": "small",
        "products_to_show": 8
      }
    }
  },
  "order": [
    "main",
    "details",
    "image-banner",
    "recommendations"
  ]
}
