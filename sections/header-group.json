{
  "type": "header",
  "name": "Header Group",
  "sections": {
    "promo-strip": {
      "type": "promo-strip",
      "blocks": {
        "heading-0": {
          "type": "heading",
          "settings": {
            "heading": "Seasonal promotion text goes here",
            "heading_size": "h6",
            "show_on_mobile": true,
            "show_on_desktop": true
          }
        },
        "discount-2": {
          "type": "discount",
          "settings": {
            "discount_code": "DISCOUNTCODE"
          }
        }
      },
      "block_order": [
        "heading-0",
        "discount-2"
      ],
      "custom_css": [
        ".promo-strip__container {justify-content: space-between;}"
      ],
      "settings": {
        "section_height": "xsmall",
        "color_scheme": "2",
        "full_width": true,
        "dividers": "border-top",
        "prevent_animation": false
      }
    },
    "header": {
      "type": "header",
      "settings": {
        "enable_sticky": true,
        "mobile_menu_position": "burger-right",
        "logo_text": "",
        "logo_type_scale": "2",
        "logo": "{{ shop.brand.logo }}",
        "logo_width": 200,
        "logo_h1": false,
        "logo_center": false,
        "enable_search": true,
        "minimise_search_mobile": true,
        "minimise_search_desktop": false,
        "menu": "main-menu",
        "menu_center": true,
        "repeat_links": true,
        "menu_featured_link": "Sale",
        "quicklinks_menu": "",
        "cta_show": false,
        "cta_icon": "phone",
        "cta_label": "Call us",
        "cta_link": "",
        "cta_border_color": "#333333",
        "cta_bg_color": "#333333",
        "cta_text_color": "#ffffff",
        "bg_color": "{{ shop.brand.colors.primary[0].foreground }}",
        "text_color": "#070707",
        "accent_color": "#ffffff"
      }
    },
    "announcement": {
      "type": "announcement",
      "disabled": true,
      "custom_css": [

      ],
      "settings": {
        "link1": "",
        "link1_label": "",
        "link2": "",
        "link2_label": "",
        "enable_country_selector": true,
        "enable_language_selector": true,
        "bg_color": "{{ shop.brand.colors.secondary[0].background }}",
        "text_color": "#ffffff",
        "text_type_scale": "small",
        "read_time": 7
      }
    }
  },
  "order": [
    "promo-strip",
    "header",
    "announcement"
  ]
}
