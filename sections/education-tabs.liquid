<link rel="stylesheet" href="{{ 'education-tabs.css' | asset_url }}" media="print" onload="this.media='all'">

<div class="section section--padded color-scheme">
    <div class="container">
        <div class="education-tabs flex justify-center gap-theme">
            <button class="btn btn--primary tab-link" onclick="openTab(event, 'EducationPDFs')">Education PDFs</button>
            <button class="btn btn--secondary tab-link" onclick="openTab(event, 'HowToVideos')">How To Videos</button>
        </div>
        <div id="EducationPDFs" class="tab-content active">
            <div class="education-list">
                {% assign education_pdfs_with_order = '' | split: '' %}

                {% for education_pdf in shop.metaobjects.education_pdf.values %}
                    {% assign sorting_order = education_pdf.sorting_order | default: 0 %}
                    {% assign pdf_with_order = education_pdf | merge: sorting_order %}
                    {% assign education_pdfs_with_order = education_pdfs_with_order | push: pdf_with_order %}
                {% endfor %}
                
                {% assign sorted_education_pdfs = education_pdfs_with_order | sort: 'sorting_order' | reverse %}
                
                {% for item in sorted_education_pdfs %}
                    <div class="education-item">
                        <div class="education-image-wrapper">
                            <img src="{{ item.cover_image | image_url }}" />
                        </div>
                        <h3 class="h6">{{ item.name }}</h3>
                        <select name="{{ item.name }}">
                            <option value="">Language</option>
                            {% if item.english %}<option value="{{ item.english | file_url }}">English</option>{% endif %}
                            {% if item.spanish %}<option value="{{ item.spanish | file_url }}">Spanish</option>{% endif %}
                            {% if item.french %}<option value="{{ item.french | file_url }}">French</option>{% endif %}
                        </select>
                    </div>
                {% endfor %}
            </div>
        </div>

        <div id="HowToVideos" class="tab-content">
            <div class="education-list">
                {% for education_video in shop.metaobjects.education_video.values %}
                    <div class="education-item">
                        <a class="education-video-link" target="_blank" href="https://www.youtube.com/watch?v={{ education_video.you_tube_id }}">
                            <div class="education-image-wrapper">
                                <img src="http://i3.ytimg.com/vi/{{ education_video.you_tube_id }}/hqdefault.jpg" />
                            </div>
                        </a>
                        <h3 class="h6 m-0">{{ education_video.video_title }}</h3>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>

<script src="{{ 'education-tabs.js' | asset_url }}" defer="defer"></script>

{% schema %}
    {
      "name": "Education Tabs",
      "presets": [
        {
          "name": "Education Tabs",
          "category": "Template"
        }
      ]
    }
{% endschema %}