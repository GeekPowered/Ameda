<div class="section section--padding">
  <div class="container">
    <div class="distributor-locations">
      {% for international_distributors in shop.metaobjects.international_distributors.values %}
        <div class="distributor-location">
          {% if international_distributors.title %}
            <h3 class="h5">{{ international_distributors.title }}</h3>
          {% endif %}

          {% if international_distributors.country.value %}
            <p>{{ international_distributors.country.value }}</p>
          {% endif %}

          {% if international_distributors.company.value %}
            <p>{{ international_distributors.company.value }}</p>
          {% endif %}

          {% if international_distributors.address %}
            {{ international_distributors.address | metafield_tag }}
          {% endif %}

          {% if international_distributors.phone_numbers %}
            {% for phone_number in international_distributors.phone_numbers %}
              <a href="tel:{{ phone_number.value }}">{{ phone_number.value }}</a>
            {% endfor %}
          {% endif %}

          {% if international_distributors.email %}
            {% for email in international_distributors.email %}
                <a href="mailto:{{ email.value }}">{{ email.value }}</a>
            {% endfor %}
          {% endif %}

          {% if international_distributors.link %}
            <a class="btn btn--primary" href="{{ international_distributors.link }}" target="_blank">Visit Website</a>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Intl. Distributors",
  "presets": [
    {
      "name": "Intl. Distributors",
      "category": "Template"
    }
  ]
}
{% endschema %}
