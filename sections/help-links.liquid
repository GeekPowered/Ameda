<link rel="stylesheet" href="{{ 'help-links.css' | asset_url }}" media="print" onload="this.media='all'">

<div class="section section--padded helpful-links">
    <div class="container">
        <h2 class="section__heading text-center">We're Here For You</h2>
        <div class="helpful-links_list">
            {% for link in section.settings.links %}
                <div class="helpful-links_item">
                    <div class="helpful-links_item_content left">
                        <h3>{{ link.title }}</h3>
                    </div>
                    <div class="helpful-links_item_content right">
                        <p>{{ link.content }}</p>
                        <a href="{{ link.url }}" class="inline-flex card__collection--arrow">
                            {{ link.link_text }}
                            <span class="has-ltr-icon flex items-center mis-2">{% render 'icon-arrow-right' %}</span>
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>

{% schema %}
{
  "name": "Help Links",
  "presets": [
    {
      "name": "Help Links",
      "category": "Template"
    }
  ],
  "settings": [
    {
      "type": "repeater",
      "label": "Links",
      "id": "links",
      "max": 10,
      "item": [
        {
          "type": "text",
          "label": "Title",
          "id": "title"
        },
        {
          "type": "textarea",
          "label": "Content",
          "id": "content"
        },
        {
          "type": "text",
          "label": "Link Text",
          "id": "link_text"
        },
        {
          "type": "url",
          "label": "Link URL",
          "id": "url"
        }
      ]
    }
  ]
}
{% endschema %}