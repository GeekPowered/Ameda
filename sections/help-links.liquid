<link rel="stylesheet" href="{{ 'help-links.css' | asset_url }}" media="print" onload="this.media='all'">

<div class="section section--padded helpful-links">
    <div class="container">
        <h2 class="section__heading text-center{% if section.settings.section_content != blank %}{{ ' mb-0' }}{% endif %}">We're Here For You</h2>
        {% if section.settings.section_content %}<p class="enlarge-text text-center  mb-10">{{ section.settings.section_content }}</p>{% endif %}
        <div class="helpful-links_list">
            {% for block in section.blocks %}
                <div class="helpful-links_item">
                    <div class="helpful-links_item_content left">
                      {% if block.settings.icon != blank %}<div class="svg-wrapper">{{ block.settings.icon }}</div>{% endif %}
                      <h3>{{ block.settings.title }}</h3>
                    </div>
                    <div class="helpful-links_item_content right">
                        <p>{{ block.settings.content }}</p>
                        {% if block.settings.url != blank %}
                        <a href="{{ block.settings.url }}" class="inline-flex card__collection--arrow">
                            {{ block.settings.link_text }}
                            <span class="has-ltr-icon flex items-center mis-2">{% render 'icon-arrow-right' %}</span>
                        </a>
                        {% endif %}
                        {% if block.settings.url_2 != blank %}
                        <a href="{{ block.settings.url_2 }}" class="inline-flex card__collection--arrow">
                            {{ block.settings.link_text_2 }}
                            <span class="has-ltr-icon flex items-center mis-2 ml-2">{% render 'icon-arrow-right' %}</span>
                        </a>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>

{% schema %}
{
  "name": "Help Links",
  "presets": [
    {
      "name": "Help Links",
      "category": "Template"
    }
  ],
  "settings": [
    {
      "type": "text",
      "label": "Subtitle Content",
      "id": "section_content"
    }
  ],
  "blocks": [
    {
      "type": "link",
      "name": "Link",
      "settings": [
        {
          "type": "text",
          "label": "Title",
          "id": "title"
        },
        {
          "type": "text",
          "id": "icon",
          "label": "SVG Icon"
        },
        {
          "type": "textarea",
          "label": "Content",
          "id": "content"
        },
        {
          "type": "text",
          "label": "Link Text",
          "id": "link_text"
        },
        {
          "type": "url",
          "label": "Link URL",
          "id": "url"
        },
                {
          "type": "text",
          "label": "Link Text 2",
          "id": "link_text_2"
        },
        {
          "type": "url",
          "label": "Link URL 2",
          "id": "url_2"
        }
      ]
    }
  ]
}
{% endschema %}
